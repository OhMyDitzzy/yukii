{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "ESNext.Array", "DOM"],
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "allowJs": false,
    "checkJs": false,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}